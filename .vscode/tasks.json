					"fileLocation": [
						"relative",
						"${workspaceFolder}"
					],
					"pattern": [
						{
							"regexp": ".*",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".*ng serve.*",
						"endsPattern": ".*Local:.*http://localhost:4200/.*"
					}
				}
			]
		}
