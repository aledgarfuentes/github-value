				{
					"pattern": [
						{
							"regexp": "^(\\d{2}:\\d{2}:\\d{2}\\.\\d{3}Z)\\s+(\\w+)\\s+([^:]+):\\s+(.*)$",
							"severity": 2,
							"message": 4,
							"file": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*tsx watch.*$",
						"endsPattern": ".*Server is running at.*"
					}
				}
			]
		},
		{
			"type": "npm",
			"script": "build",
